@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <link type="image/x-icon" href="~/favicon-progress.ico" rel="shortcut icon">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.mobile.all.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.metro.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.dataviz.metro.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link type="text/css" href="~/Content/signIn.css" rel="stylesheet" />

    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/kendo.aspnetmvc.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/kendo.timezones.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.0.3/js.cookie.min.js"></script>
    @Scripts.Render("~/Scripts/sign-in.js")
</head>
<body>
    <div class="sidebar">
        <div class="header">
            <a href="@Url.Action("Index", "Home")" title="Go to WebMail">
                <h1>WebMail</h1>
                <p>ASP.NET MVC Demo App</p>
            </a>
        </div>
        <div class="footer">
            <p>
                Copyright &copy; @DateTime.Now.Year
                <br />
                Progress Software Corporation and/or its subsidiaries or affiliates.
            </p>
            <p>
                All Rights Reserved.
            </p>
        </div>
    </div>
    <div class="content">
        <h2>Sign In</h2>
        <label for="username-textbox">Username</label>
        <input type="text" class="k-input username-textbox" name="username-textbox" value="antonio.morandi">
        <label for="password-textbox">Password</label>
        <input type="password" class="k-input password-textbox" name="password-textbox" value="password">
        <br />
        <button id="signInButton" class="k-primary" onclick="location.href='@Url.Action("Index", "Home")';return false;">Sign In</button>
        <div class="links">
            <p id="btn-about">About This App</p>
            <a href="https://github.com/telerik/web-mail-sample-app-mvc" target="_blank">Download Source Code</a>
        </div>
    </div>

    @(Html.Kendo().Window()
        .Name("aboutWindow")
        .Title("")
        .Content("loading...")
        .Iframe(false)
        .Modal(true)
        .LoadContentFrom("About", "Home")
        .Actions(actions => actions.Close())
        .Draggable(true)
        .Visible(false)
    )
</body>
</html>
